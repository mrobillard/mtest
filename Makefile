#==============================================================================
# Make Variables 
#==============================================================================
CFLAGS := -std=c99 -w 

LIBS := -L. -lm 

TARGET := run_tests

#==============================================================================
# Make all
#==============================================================================
all: test

#==============================================================================
# Compile and link tests
#==============================================================================
test:
	@gcc $(CFLAGS) -I. -c run_tests.c 
	@gcc $(CFLAGS) -I. -c test_util.c 
	@gcc $(CFLAGS) -I. -c example_tests.c 
	@gcc -o $(TARGET) *.o $(LIBS)

#==============================================================================
# Make clean
#==============================================================================
clean:
	rm -f $(TARGET) *.o
